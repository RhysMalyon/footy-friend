<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to ("<i class='fas fa-user-plus'></i> Add new player").html_safe, new_player_path(@players), class: "btn btn-warning mt-4 rounded-pill add-league-btn" %>
  </div>
  <div class="cards mt-4 mx-4">
    <% @team.players.each do |player| %>
      <% if player.photo.attached? %>
        <div class="card-category d-flex flex-column" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path player.photo.key, crop: :fill %>')">
      <% else %>
        <div class="card-category d-flex flex-column" style='background-image: linear-gradient(rgba(191, 122, 48, 1), rgba(0,0,0,0.7)), url(<%= image_url('player-background.jpg') %>)'>
      <% end %>
        <%= link_to ("#{player.first_name} #{player.last_name}"), player_path(player) %>
        <div class="element-delete">
          <%= link_to ('<i class="fas fa-trash"></i>').html_safe,
                      player_path(player),
                      method: :delete,
                      class: 'card-remove-link', 
                      data: { confirm: "Remove #{player.first_name} #{player.last_name}?"} %>
        </div>
      </div>
    <% end %>
  </div>
</div>
