<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to ("<i class='fas fa-user-plus'></i> Add new player").html_safe, new_player_path(@players), class: "btn btn-warning mt-4 rounded-pill add-league-btn" %>
  </div>
  <div class="cards mt-4 mx-4 d-flex flex-wrap justify-content-center">
    <% @team.players.each do |player| %>
      <div class="card">
        <div class="card__inner">
          <% if player.photo.attached? %>
            <div class="card__face card__face--front" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path player.photo.key, crop: :fill %>')">
              <h2><%= "#{player.first_name} #{player.last_name}" %></h2>
            </div>
          <% else %>
            <div class="card__face card__face--front" style='background-image: linear-gradient(rgba(191, 122, 48, 1), rgba(0,0,0,0.7)), url(<%= image_url('player-background.jpg') %>)'>
              <h2><%= "#{player.first_name} #{player.last_name}" %></h2>
            </div>
          <% end %>
          <div class="card__face card__face--back">
            <div class="card__content">
              <div class="card__header">
                <h2><%= "#{player.first_name} #{player.last_name}" %></h2>
              </div>
              <div class="card__body">
                <h3><%= player.team.name %></h3>
                <p>Position: <%= player.position %></p>
                <p>Age: <%= player.age %></p>
                <p>Nationality: <%= player.nationality %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
