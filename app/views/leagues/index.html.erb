

<div class="container">
  <div class="d-flex justify-content-end">
    <%= link_to "Add new league", new_league_path(@leagues), class: "btn btn-warning mt-4 rounded-pill shadow-lg" %>
  </div>
  <% @leagues.each do |league| %>
    <% if league.photo.attached? %>
      <div class="card-category mt-4 d-flex flex-column" style="background-image: linear-gradient(rgba(191, 122, 48, 1), rgba(0,0,0,0.3)), url('<%= cl_image_path league.photo.key, crop: :fill %>')">
    <% else %>
      <div class="card-category mt-4 d-flex flex-column" style="background-image: linear-gradient(rgba(191, 122, 48, 1), rgba(0,0,0,0.7)), url(http://source.unsplash.com/featured/?football)">
    <% end %>
      <%= link_to league.name, league_path(league) %>
      <%= link_to "Delete",
                          league_path(league),
                          method: :delete,
                          class: 'card-remove-link', 
                          data: { confirm: "Remove #{league.name}?"} %>
    </div>
  <% end %>
</div>
